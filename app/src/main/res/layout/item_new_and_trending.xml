<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_new_and_trending_item_root"
    android:layout_width="164dp"
    android:layout_height="250dp"
    android:layout_margin="8dp"
    app:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_new_and_trending_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Newly Opened"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="24dp"
            android:layout_marginRight="16dp"
            android:textStyle="bold"
            android:textColor="@color/primary"
            android:textSize="18sp"
            />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_new_and_trending_item"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_below="@id/tv_new_and_trending_item_title"
            android:layout_alignLeft="@id/tv_new_and_trending_item_title"
            android:layout_alignRight="@id/tv_new_and_trending_item_title"
            android:layout_marginTop="16dp"
            />

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/rv_new_and_trending_item"
            android:layout_marginTop="20dp"
            android:background="@android:color/darker_gray"
            />

        <TextView
            android:id="@+id/tv_explore_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="EXPLORE"
            android:layout_below="@id/divider"
            android:layout_alignLeft="@id/tv_new_and_trending_item_title"
            android:layout_alignRight="@id/tv_new_and_trending_item_title"
            android:layout_marginTop="12dp"
            android:textColor="@color/primary_text"
            android:textSize="12sp"
            />

    </RelativeLayout>

</android.support.v7.widget.CardView>