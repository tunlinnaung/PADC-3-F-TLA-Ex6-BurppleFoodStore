<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_burpple_guides_item_root"
    android:layout_width="164dp"
    android:layout_height="240dp"
    android:layout_margin="8dp"
    app:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_guide_item"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/coutinho"
            android:scaleType="centerCrop"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_burpple_guide_item_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/lbl_burpple_guide_item_status"
                android:textSize="10sp"
                android:gravity="center"
                android:textColor="@android:color/white"
                />

            <TextView
                android:id="@+id/tv_burpple_guide_item_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DECEMBER"
                android:layout_below="@id/tv_burpple_guide_item_status"
                android:gravity="center"
                android:layout_marginTop="4dp"
                android:textSize="24sp"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/tv_burpple_guide_item_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_burpple_guide_item_title"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp"
                android:drawableLeft="@drawable/ic_check_circle_24dp"
                android:gravity="center"
                android:text="burpple"
                android:textColor="@android:color/white"
                android:textSize="12sp" />

        </RelativeLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>